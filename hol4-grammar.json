{
  "name": "HOL4 Proof script",
  "scopeName": "source.hol4",
  "fileTypes": [".sml"],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.hol",
          "begin": "\\(\\*",
          "end": "\\*\\)"
        }
      ]
    },
    "escaped-chars": {
      "name": "constant.character.escape.ml",
      "match": "\\\\."
    },
    "identifier": {
      "name": "entity.name.identifier.hol",
      "match": "[a-zA-Z][a-zA-Z0-9_']*"
    }
  },
  "patterns": [
    {
      "name": "comment.block.hol",
      "begin": "\\(\\*",
      "end": "\\*\\)",
      "patterns": [{"include": "#comments"}]
    },
    {
      "name": "string.quoted.double.ml",
      "begin": "\"",
      "end": "\"",
      "patterns": [{"include": "#escaped-chars"}]
    },
    {
      "begin": "^(Theorem|Triviality)\\s*([^\\[:]*)(\\[([^\\]]*)\\])?(:)\\s*$",
      "end": "^Proof\\s*$",
      "beginCaptures": {
        "1": {"name": "keyword.other.theorem.hol"},
        "2": {"name": "entity.name.function.hol"},
        "4": {"name": "entity.name.tag.thmtag.hol"}
      },
      "endCaptures": {
        "0": {"name": "keyword.other.proof.hol"}
      }
    },
    {
      "begin": "^(CoDatatype|Datatype):\\s*",
      "end": "^End\\s$",
      "beginCaptures": {
        "1": {"name": "keyword.other.datatype.hol"}
      },
      "endCaptures": {
        "0": {"name": "keyword.other.end.hol"}
      }
    },
    {
      "match": "^(Termination|Proof|QED|End)\\s*",
      "name": "keyword.other.end.hol"
    }
  ]
}
