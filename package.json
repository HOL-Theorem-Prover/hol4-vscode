{
  "name": "hol4-mode",
	"displayName": "HOL4 mode",
	"description": "A VSCode extension for interacting with the HOL4 theorem prover",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:hol4",
		"onLanguage:sml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"grammars": [
			{
				"language": "hol4",
				"scopeName": "source.hol4",
				"path": "./hol4-grammar.json"
			}
		],
		"languages": [
			{
				"id": "hol4",
				"extensions": [".sml"],
				"aliases": ["HOL4"],
				"configuration": "./hol4-language.json",
				"filenamePatterns": ["*Script.sml"]
			}
		],
		"commands": [
			{
				"command": "hol4-mode.startSession",
				"title": "HOL: Start session"
			},
			{
				"command": "hol4-mode.stopSession",
				"title": "HOL: Stop session"
			},
			{
				"command": "hol4-mode.sendSelection",
				"title": "HOL: Send selection"
			},
			{
				"command": "hol4-mode.sendUntilCursor",
				"title": "HOL: Send all up to current line"
			},
			{
				"command": "hol4-mode.sendGoal",
				"title": "HOL: Send goal"
			},
			{
				"command": "hol4-mode.sendTactic",
				"title": "HOL: Send tactic"
			},
			{
				"command": "hol4-mode.showGoal",
				"title": "HOL: Show goal"
			},
			{
				"command": "hol4-mode.rotateGoal",
				"title": "HOL: Rotate goal"
			},
			{
				"command": "hol4-mode.dropGoal",
				"title": "HOL: Drop goal"
			}
		],
		"keybindings": [
			{
				"command": "hol4-mode.startSession",
				"key": "ctrl+h ctrl+h",
				"mac": "cmd+h cmd+h",
				"when": "editorFocus"
			},
			{
				"command": "hol4-mode.stopSession",
				"key": "ctrl+h ctrl+x",
				"mac": "cmd+h cmd+x",
				"when": "editorFocus"
			},
			{
				"command": "hol4-mode.sendSelection",
				"key": "ctrl+h s",
				"mac": "cmd+h s",
				"when": "editorFocus"
			},
			{
				"command": "hol4-mode.sendUntilCursor",
				"key": "ctrl+h ctrl+s",
				"mac": "cmd+h cmd+s",
				"when": "editorFocus"
			},
			{
				"command": "hol4-mode.sendGoal",
				"key": "ctrl+h g",
				"mac": "cmd+h g",
				"when": "editorFocus"
			},
			{
				"command": "hol4-mode.sendTactic",
				"key": "ctrl+h e",
				"mac": "cmd+h e",
				"when": "editorFocus"
			},
			{
				"command": "hol4-mode.showGoal",
				"key": "ctrl+h p",
				"mac": "cmd+h p",
				"when": "editorFocus"
			},
			{
				"command": "hol4-mode.rotateGoal",
				"key": "ctrl+h r",
				"mac": "cmd+h r",
				"when": "editorFocus"
			},
			{
				"command": "hol4-mode.dropGoal",
				"key": "ctrl+h d",
				"mac": "cmd+h d",
				"when": "editorFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"@vscode/test-electron": "^2.0.3"
	}
}
